<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white_247x3"
              android:orientation="vertical"
              android:padding="@dimen/x45">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x28"
            android:layout_marginTop="@dimen/y33"
            android:textColor="@color/blue_theme"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x28"
            android:layout_marginTop="@dimen/y33"
            android:gravity="right"
            android:textColor="@color/blue_theme"
            android:textSize="18dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x28"
            android:layout_marginRight="@dimen/x28"
            android:layout_marginTop="@dimen/y33"
            android:background="@drawable/bordblueall"
            android:padding="@dimen/x27"
            android:textColor="@color/white"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y30"
            android:background="@color/white"/>
    </LinearLayout>

    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120"
        android:layout_marginBottom="@dimen/y45"
        android:background="@color/gray_230x3"
        android:gravity="center_vertical|right"
        android:textSize="12dp"/>

</LinearLayout>