<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.util.TitleBar style="@style/bar_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y60"
        android:layout_marginTop="@dimen/y45"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x45"
        android:paddingRight="@dimen/x45">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="接收推送信息　"
            android:textSize="17dp"/>

        <com.suke.widget.SwitchButton
            android:id="@+id/switchpush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            app:sb_background="@color/gray_162x3"
            app:sb_checked_color="@color/blue_theme"
            app:sb_checkline_color="@color/blue_theme"
            app:sb_effect_duration="300"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y60"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x45"
        android:paddingRight="@dimen/x45">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新信息声音提示"
            android:textSize="17dp"/>

        <com.suke.widget.SwitchButton
            android:id="@+id/switchmusic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            app:sb_background="@color/gray_162x3"
            app:sb_checked_color="@color/blue_theme"
            app:sb_checkline_color="@color/blue_theme"
            app:sb_effect_duration="300"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y60"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x45"
        android:paddingRight="@dimen/x45">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:text="新信息震动提示"
            android:textSize="17dp"/>

        <com.suke.widget.SwitchButton
            android:id="@+id/switchvibrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            app:sb_background="@color/gray_162x3"
            app:sb_checked_color="@color/blue_theme"
            app:sb_checkline_color="@color/blue_theme"
            app:sb_effect_duration="300"/>

    </RelativeLayout>

</LinearLayout>