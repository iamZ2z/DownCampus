<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:background="@drawable/bordblueround"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:textSize="13dp"/>

    <TextView
        android:id="@+id/rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="评价优"
        android:textColor="@color/blue_download"
        android:textSize="13dp"
        android:layout_alignBottom="@+id/pingyu"
        android:layout_alignEnd="@+id/time"/>

    <TextView
        android:id="@+id/pingyu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginLeft="10dp"
        android:text="评语："
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pingyu"
        android:layout_margin="10dp"
        android:textColor="@color/blue_download"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/content"
        android:layout_marginBottom="10dp"
        android:text="时间"
        android:layout_marginRight="10dp"
        android:textColor="@color/gray_162x3"
        android:textSize="13dp"/>

</RelativeLayout>