<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.util.title.TitleBar style="@style/bar_title"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <com.util.percent.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="学年"
                    app:layout_widthPercent="10%"/>

                <Spinner
                    android:id="@+id/sp_year"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/bordblueround"
                    app:layout_widthPercent="80%"/>
            </com.util.percent.PercentLinearLayout>

            <com.util.percent.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="学期"
                    app:layout_widthPercent="10%"/>

                <Spinner
                    android:id="@+id/sp_term"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/bordblueround"
                    app:layout_widthPercent="80%"/>
            </com.util.percent.PercentLinearLayout>

            <com.util.percent.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="30dp"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="类型"
                    app:layout_widthPercent="10%"/>

                <Spinner
                    android:id="@+id/sp_type"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/bordblueround"
                    app:layout_widthPercent="80%"/>
            </com.util.percent.PercentLinearLayout>

            <com.util.percent.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="30dp"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="名称"
                    app:layout_widthPercent="10%"/>

                <Spinner
                    android:id="@+id/sp_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/bordblueround"
                    app:layout_widthPercent="80%"/>
            </com.util.percent.PercentLinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_sure"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/bordblueradiusmore"
            android:gravity="center"
            android:text="查询"
            android:textColor="@color/white"
            android:textSize="17dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/loadingimg"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/loadingimg"/>

</RelativeLayout>