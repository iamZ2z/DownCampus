<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/y210"
              android:layout_marginLeft="@dimen/x45"
              android:layout_marginRight="@dimen/x45"
              android:layout_marginTop="@dimen/y45"
              android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@mipmap/footprint_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/y15"
        android:layout_marginBottom="@dimen/y15"
        android:layout_marginLeft="@dimen/x45"
        android:background="@mipmap/footprint_img_bg1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/footprint_listdate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x75"
            android:gravity="center_vertical"
            android:text="3月30日"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/footprint_listtime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x45"
            android:gravity="center_vertical"
            android:text="9:00签到"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/footprint_listsign"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x45"
            android:gravity="center_vertical"
            android:text="正常"
            android:textColor="@color/white"
            android:textSize="18sp"/>

    </LinearLayout>
</LinearLayout>