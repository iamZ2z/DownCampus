<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.util.TitleBar style="@style/bar_title"/>

    <com.logan.widgets.ClearEditText
        android:id="@+id/filter_edit"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/y132"
        android:layout_marginLeft="@dimen/x45"
        android:layout_marginRight="@dimen/x45"
        android:layout_marginTop="@dimen/y30"
        android:background="@drawable/bordgray"
        android:drawableLeft="@mipmap/message_icon_search"
        android:drawablePadding="@dimen/x15"
        android:hint="搜索联系人"
        android:paddingLeft="@dimen/x15"
        android:textColor="@color/deep_gray"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/no_search_result_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x45"
        android:text="未搜索到结果"
        android:visibility="gone"/>

    <ExpandableListView
        android:id="@+id/my_expand_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>