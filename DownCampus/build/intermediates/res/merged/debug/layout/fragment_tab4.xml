<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:stv="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginTop="20dp"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/my_img_bg"
        android:layout_marginTop="-1dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@android:color/transparent"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/touxiang"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刘波"
            android:textColor="@color/white"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/autograph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="空谈误国，实干兴邦"
            android:textColor="@color/white"
            android:textSize="13dp"/>

        <TextView
            android:id="@+id/btn_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_marginRight="15dp"
            android:gravity="right"
            android:text="编辑资料>>"
            android:textColor="@color/white"
            android:textSize="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/text_dynamic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="13dp"
        android:paddingTop="13dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:src="@mipmap/my_icon_dry"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:text="我的动态"
            android:textColor="#000000"
            android:textSize="17dp"/>

    </LinearLayout>

    <com.allen.library.SuperTextView
        android:id="@+id/supertv"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_height="60dp"
        stv:sLeftIconRes="@mipmap/my_icon_password"
        stv:sLeftTextSize="17dp"
        stv:sLeftTextString="更改密码"
        stv:sLineShow="bottom"
        stv:sUseRipple="true"/>

    <com.allen.library.SuperTextView
        android:id="@+id/supertv2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        stv:sLeftIconRes="@mipmap/my_icon_install"
        stv:sLeftTextSize="17dp"
        stv:sLeftTextString="设置"
        stv:sLineShow="bottom"
        stv:sUseRipple="true"/>

    <Button
        android:id="@+id/btn_changerole"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bordblueradiusmore"
        android:text="角色切换"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:visibility="gone"/>

</LinearLayout>