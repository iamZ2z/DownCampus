<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.util.TitleBar
            style="@style/bar_title"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x37"
            android:layout_marginRight="@dimen/x37"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/sp_subject"
                android:layout_width="0dp"
                android:layout_height="@dimen/y141"
                android:layout_weight="1"
                android:background="@drawable/bordblueround"/>

            <TextView
                android:id="@+id/tv_date_begin"
                android:layout_width="0dp"
                android:layout_height="@dimen/y141"
                android:layout_marginLeft="@dimen/x30"
                android:layout_weight="1"
                android:background="@drawable/bordblueround"
                android:gravity="center"
                android:text="2017-01-01"
                android:textSize="14dp"/>

            <TextView
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/y141"
                android:gravity="center"
                android:text="-"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/tv_date_end"
                android:layout_width="0dp"
                android:layout_height="@dimen/y141"
                android:layout_weight="1"
                android:background="@drawable/bordblueround"
                android:gravity="center"
                android:text="2017-12-31"
                android:textSize="14dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/y30"
            android:background="@color/gray_204x3"/>

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/y30">
        </ListView>

    </LinearLayout>


    <cn.aigestudio.datepicker.views.DatePicker
        android:id="@+id/date_begin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/y192"
        android:background="@android:color/transparent"
        android:visibility="gone"/>


</FrameLayout>