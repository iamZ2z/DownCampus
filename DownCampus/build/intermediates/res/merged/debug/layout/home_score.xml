<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <com.util.TitleBar style="@style/bar_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x42"
            android:text="学年："/>

        <Spinner
            android:id="@+id/sp_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x42"
            android:layout_marginTop="@dimen/y42"
            android:background="@drawable/bordblueround"
            android:padding="@dimen/x42"            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x42"
            android:text="学期："/>

        <Spinner
            android:id="@+id/sp_term"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x42"
            android:layout_marginTop="@dimen/y42"
            android:background="@drawable/bordblueround"
            android:padding="14dp"            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x42"
            android:text="类型："/>

        <Spinner
            android:id="@+id/sp_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x42"
            android:layout_marginTop="@dimen/y42"
            android:background="@drawable/bordblueround"
            android:padding="@dimen/x42"            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x42"
            android:text="名称："/>

        <Spinner
            android:id="@+id/sp_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x42"
            android:layout_marginTop="@dimen/y42"
            android:background="@drawable/bordblueround"
            android:padding="@dimen/x42"            />
    </LinearLayout>

    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x42"
        android:layout_marginTop="@dimen/y120"
        android:background="@drawable/bluebutton"
        android:text="确定"
        android:textColor="@color/white_247x3"/>

</LinearLayout>