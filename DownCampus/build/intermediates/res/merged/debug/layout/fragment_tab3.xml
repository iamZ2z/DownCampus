<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:stv="http://schemas.android.com/apk/res-auto"
                android:layout_marginTop="64dp"
                android:orientation="vertical">

    <com.allen.library.SuperTextView
        android:id="@+id/text_classact"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        stv:sLeftIconRes="@mipmap/dynamic_icon_dyn"
        stv:sLeftTextString="班级动态"
        stv:sLineShow="bottom"
        stv:sLeftTextSize="17dp"
        stv:sUseRipple="true"
        android:visibility="gone"/>

    <com.allen.library.SuperTextView
        android:id="@+id/supertv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        stv:sLeftIconRes="@mipmap/dynamic_icon_news"
        stv:sLeftTextString="校园新闻"
        stv:sLineShow="bottom"
        android:layout_below="@id/text_classact"
        stv:sLeftTextSize="17dp"
        stv:sUseRipple="true"/>

    <com.allen.library.SuperTextView
        android:id="@+id/supertv2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        stv:sLeftIconRes="@mipmap/dynamic_icon_activity"
        stv:sLeftTextString="校园活动"
        android:layout_below="@id/supertv"
        stv:sLeftTextSize="17dp"
        stv:sUseRipple="true"/>

</RelativeLayout>