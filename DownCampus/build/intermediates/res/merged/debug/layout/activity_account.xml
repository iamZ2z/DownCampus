<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:background="@mipmap/login_bg_img"
              android:orientation="vertical">

    <TextView
        android:id="@+id/sp_role"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="260dp"
        android:background="@drawable/spinner_account"
        android:paddingLeft="30dp"
        android:text="请选择角色"
        android:textSize="16dp"/>

    <TextView
        android:layout_width="268dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/blue_theme"/>

    <EditText
        android:id="@+id/et_account"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:drawableLeft="@mipmap/login_icon_account_pressed"
        android:hint="请输入帐号或手机号"/>

    <EditText
        android:id="@+id/et_password"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:drawableLeft="@mipmap/login_icon_password_pressed"
        android:hint="请输入密码"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/btn_loginmain"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:background="@mipmap/login_btn_login_default"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/white"/>


    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/campus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:text="学校合作"
            android:textColor="@color/blue_theme"
            android:textSize="16dp"/>

        <TextView
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/blue_theme"/>

        <Button
            android:id="@+id/findpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:text="忘记密码"
            android:textColor="@color/blue_theme"
            android:textSize="16dp"/>


    </LinearLayout>


</LinearLayout>