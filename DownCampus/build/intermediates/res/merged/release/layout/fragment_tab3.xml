<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="64dp"
    android:orientation="vertical" >

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_230x3"
            android:drawableLeft="@mipmap/nav_btn_search"
            android:gravity="center"
            android:hint="搜索"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:background="@android:color/transparent"
            android:src="@mipmap/nav_btn_close"
            android:visibility="invisible"/>

    </RelativeLayout>


    <Button
        android:id="@+id/text_classact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:drawableLeft="@mipmap/dynamic_icon_dyn"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="班级动态" />

    <Button
        android:id="@+id/text_campusnews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:drawableLeft="@mipmap/dynamic_icon_news"
        android:paddingLeft="20dp"
        android:layout_marginTop="25dp"
        android:text="校园新闻" />

    <Button
        android:id="@+id/text_campusact"
        android:layout_width="match_parent"
        android:drawableLeft="@mipmap/dynamic_icon_activity"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="校园活动" />


</LinearLayout>