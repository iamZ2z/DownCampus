<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/y152"
    android:layout_marginTop="@dimen/y192"
    android:background="@color/white_247x3"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/y600"
        android:orientation="vertical">

        <com.util.viewflow.ViewFlow
            android:id="@+id/viewflow"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#00000000"
            android:gravity="center"
            android:padding="@dimen/x9">

            <com.util.viewflow.CircleFlowIndicator
                android:id="@+id/viewflowindic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:padding="@dimen/x6"
                app:activeColor="@color/blue_theme"
                app:activeType="fill"
                app:circleSeparation="@dimen/x60"
                app:inactiveColor="#ffffff"
                app:inactiveType="fill"
                app:radius="@dimen/x12" />
        </FrameLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="@dimen/x30"
        android:layout_height="wrap_content"
        android:background="@color/white_247x3"
        android:orientation="vertical">

        <GridView
            android:id="@+id/grid"
            android:padding="@dimen/x30"
            android:background="@drawable/shadow_homegrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:horizontalSpacing="@dimen/x60"
            android:numColumns="4"
            android:verticalSpacing="@dimen/x60" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@mipmap/home_bg_img" />
    </RelativeLayout>
</LinearLayout>