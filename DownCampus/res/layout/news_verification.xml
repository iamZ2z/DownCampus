<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_247x3"
    android:orientation="vertical">

    <com.util.TitleBar style="@style/bar_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="你需要发送验证申请，等待对方通过"
            android:textColor="@color/gray_162x3"
            android:textSize="13dp" />

        <com.logan.widgets.ClearEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:background="@drawable/bordblueround_dash"
            android:hint="16个字符以内"
            android:padding="10dp"
            android:textSize="13dp" />

        <Button
            android:id="@+id/sendverification"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="25dp"
            android:background="@drawable/bordblueradiusmore"
            android:text="发送验证"
            android:textColor="@color/white"
            android:textSize="17dp" />

    </LinearLayout>

</LinearLayout>