<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.util.TitleBar style="@style/bar_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x45"
        android:layout_marginRight="@dimen/x45"
        android:orientation="vertical">

        <com.util.percent.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y96"
            android:layout_marginTop="@dimen/y90"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="学年"
                app:layout_widthPercent="10%" />

            <Spinner
                android:id="@+id/sp_year"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x45"
                android:background="@drawable/bordblueround"
                app:layout_widthPercent="80%" />
        </com.util.percent.PercentLinearLayout>

        <com.util.percent.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y96"
            android:layout_marginTop="@dimen/y90"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="学期"
                app:layout_widthPercent="10%" />

            <Spinner
                android:id="@+id/sp_term"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x45"
                android:background="@drawable/bordblueround"
                app:layout_widthPercent="80%" />
        </com.util.percent.PercentLinearLayout>

        <com.util.percent.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y96"
            android:layout_marginTop="@dimen/y90"

            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="类型"
                app:layout_widthPercent="10%" />

            <Spinner
                android:id="@+id/sp_type"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x45"
                android:background="@drawable/bordblueround"
                app:layout_widthPercent="80%" />
        </com.util.percent.PercentLinearLayout>

        <com.util.percent.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y96"
            android:layout_marginTop="@dimen/y90"

            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="名称"
                app:layout_widthPercent="10%" />

            <Spinner
                android:id="@+id/sp_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x45"
                android:background="@drawable/bordblueround"
                app:layout_widthPercent="80%" />
        </com.util.percent.PercentLinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_sure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120"
        android:layout_marginLeft="@dimen/x45"
        android:layout_marginRight="@dimen/x45"
        android:layout_marginTop="@dimen/y150"
        android:background="@drawable/bordblueradiusmore"
        android:gravity="center"
        android:text="查询"
        android:textColor="@color/white"
        android:textSize="17dp" />

</LinearLayout>