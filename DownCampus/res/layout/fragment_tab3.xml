        android:drawableLeft="@mipmap/dynamic_icon_dyn"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:text="班级动态"
        android:visibility="gone"/>

    <com.allen.library.SuperTextView
        android:id="@+id/supertv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        stv:sLeftIconRes="@mipmap/dynamic_icon_news"
        stv:sLeftTextString="校园新闻"
        stv:sLineShow="bottom"
        stv:sLeftTextSize="17dp"
        stv:sUseRipple="true"/>

    <com.allen.library.SuperTextView
        android:id="@+id/supertv2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        stv:sLeftIconRes="@mipmap/dynamic_icon_activity"
        stv:sLeftTextString="校园活动"
        android:layout_below="@id/supertv"
        stv:sLeftTextSize="17dp"
        stv:sUseRipple="true"/>



