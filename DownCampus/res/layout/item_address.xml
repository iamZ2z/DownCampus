<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/exlist_itemlayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.util.CircleImageView
        android:id="@+id/exlist_itemimg"
        android:layout_width="@dimen/x150"
        android:layout_height="@dimen/y150"
        android:layout_marginBottom="@dimen/y27"
        android:layout_marginLeft="@dimen/x45"
        android:layout_marginTop="@dimen/y27"
        android:src="@drawable/touxiang"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/x30"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/exlist_itemimg">

        <TextView
            android:id="@+id/exlist_itemname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y27"
            android:gravity="center_vertical"
            android:text="周晓晓"
            android:textSize="17dp"/>

        <TextView
            android:id="@+id/exlist_itemword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y24"
            android:text="是我"
            android:textColor="@color/gray_162x3"
            android:textSize="14dp"/>

    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>