<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.util.title.TitleBar style="@style/bar_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/check_img_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.util.CircleImageView
            android:id="@+id/head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/touxiang" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="刘波"
            android:textColor="@color/white"
            android:textSize="17dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/sp_year"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_gravity="left"
                android:layout_marginLeft="50dp"
                android:background="@drawable/bordblueround" />

            <Spinner
                android:layout_marginRight="50dp"
                android:layout_gravity="right"
                android:id="@+id/sp_term"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:background="@drawable/bordblueround" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@color/white"
        android:dividerHeight="15dp"></ListView>

</LinearLayout>